<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:textViewStyle">@style/MyTextView</item>
    </style>

    <!-- 修改默认textview属性 -->
    <style name="MyTextView" parent="@android:style/Widget.TextView">
         <item name="android:textColor">@color/white</item>
         <item name="android:textSize">@dimen/defalt_text_size</item>
    </style>
    <!-- 表决按钮的属性 -->
     <style name="MyButton">
         <item name="android:gravity">center</item>
         <item name="android:layout_width">@dimen/btn_layout_size</item>
         <item name="android:layout_height">@dimen/btn_layout_size</item>
         <item name="android:textColor">@color/white</item>
         <item name="android:textSize">@dimen/defalt_text_size</item>
    </style>
    <!-- 闪烁灯的属性-->
    <style name="MyLamp">
         <item name="android:layout_width">22px</item>
         <item name="android:layout_height">22px</item>
         <item name="android:scaleType">fitCenter</item>
         <item name="android:src">@drawable/anim_lamp</item>
         <item name="android:layout_marginBottom">10px</item>
    </style>
     <!-- 对话框 -->
    <style name="dlgWinAnim" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit</item>
    </style>
</resources>
