<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custome="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50px"
        android:padding="10px"
        android:text="设置地址"
        android:textSize="22px" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1.5px"
        android:layout_marginLeft="10px"
        android:layout_marginRight="10px"
        android:background="@color/white" />

    <com.flx.view.RippleView
        android:id="@+id/rv_set"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20px"
        android:layout_marginTop="20px"
        android:gravity="center"
        custome:rv_color="@color/white"
        custome:rv_rippleDuration="300" >

        <Button
            android:layout_width="200px"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_shap_rectangle_button"
            android:text="点击设置地址"
            android:textColor="@color/white"
            android:textSize="20px" />
    </com.flx.view.RippleView>

    <TextView
        android:id="@+id/tv_address"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10px"
        android:layout_weight="1"
        android:gravity="center"
        android:text="通道号:1\n  地址号:11"
        android:textColor="@color/white"
        android:textSize="20px" 
        android:visibility="gone"/>

    <com.flx.view.RippleView
         android:id="@+id/rv_yes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20px"
        android:layout_marginTop="20px"
        android:gravity="center"
        custome:rv_color="@color/white"
        custome:rv_rippleDuration="300" 
        android:visibility="gone">

        <Button
            android:layout_width="200px"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_shap_rectangle_button"
            android:text="确认地址"
            android:textColor="@color/white"
            android:textSize="20px" />
    </com.flx.view.RippleView>

</LinearLayout>